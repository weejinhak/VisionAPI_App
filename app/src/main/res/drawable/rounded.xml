<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">

        <shape >

            <!--도형안에 채워질 색을 정의한다.-->
            <solid android:color="@color/colorPrimaryDark"/>

            <!-- width = 테두리 선의 굴기, color = 테두리 선의 색을 정의한다.-->
            <stroke android:width="2dp" android:color="@color/colorPrimaryDark"/>

            <!--각 모서리의 라운드 처리 - 값이 클수록 라운드의 각이 커진다.-->
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp" android:topLeftRadius="50dp" android:topRightRadius="50dp"/>

        </shape>
    </item>

    <!--위와 동일하다.-->
    <item android:state_pressed="false">
        <shape >
            <solid android:color="@color/app_point_color"/>
            <stroke android:width="2dp" android:color="@color/colorPrimaryDark"/>
            <corners android:bottomLeftRadius="50dp" android:bottomRightRadius="50dp" android:topLeftRadius="50dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
</selector>